pipeline{
    agent {
		label 'dev'
	}
    stages{
        stage('hostname'){
            steps{
                sh '''
                    hostname
                '''
            }
        }
        stage('ServerDetail'){
            steps{
                sh '''
                    uname -a
                '''
            }
        }
        stage('Memory'){
            steps{
                sh '''
                    free -h
                '''
            }
        }
        stage('Disk Utilization'){
            steps{
                sh '''
                    df -kh
                '''
            }
        }
	stage('Server-Uptime'){
            steps{
                sh '''
                    uptime
                '''
            }
        }
	stage('CPU-Details'){
            steps{
                sh '''
                    lscpu
                '''
            }
        }
    }
}
